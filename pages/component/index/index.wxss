/* 背景层 */
.indexBg{
  width: 100%;
  height: 100%;
  display: block;
}


/* 地图层 */
.mapBox{
  position: absolute;
  bottom: 320rpx;
  left:5%;
  width: 90%;
  height: 400rpx;
  transform: translateY(30px);
  border: 1px solid #ddd;
}

.closeBox{
  position: absolute;
  top: -80rpx;
  left: 50%;
  width: 50rpx;
  height: 50rpx;
  transform: translateX(-50%)
}
.closeBtn{
  width: 50rpx;
  height: 50rpx;
}


/* 卡片层 */
.cardBox{
  position: absolute;
  bottom: 120rpx;
  left:0;
  width: 100%;
  height: 400rpx;
}
.cardBg{
  position: absolute;
  bottom: 200rpx;
  width: 90%;
  left: 5%;
  height: 100%;
  background-color: rgb(255, 255, 255);
  opacity: 1;
}
.cardBg .boxLine{
  height: 382rpx;
  border: 2rpx solid #000;
  display: flex;
  margin: 10rpx;
  box-sizing: border-box;
}
.jiudianBox{
  position: absolute;
  bottom: 230rpx;
  width: 100%;
  height: 50rpx;
  text-align: center;
  vertical-align: middle;
}
.icoAddr{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.jiudian{
  letter-spacing:10rpx;
  height: 50rpx;
  line-height: 50rpx;
  opacity: 0;
}
.we{
  position: absolute;
  bottom: 166rpx;
  width: 80%;
  left: 10%;
  opacity: 0;
}
.timeBox{
  position: absolute;
  bottom: 330rpx;
  height: 60rpx;
  width: 74%;
  left: 15%;
  display: flex;
  align-items:center;
  justify-content:center;
}
.timeBox .tbox{
  height: 100%;
  width: 0%;
  text-align: center;
  display: inline-block;
  border-top: 2rpx solid rgba(0, 0, 0, 0.3);
  border-bottom: 1px solid rgba(0, 0, 0, 0.3);
}
.du, .chang{
  position: absolute;
  bottom: 430rpx;
  font-size: 40rpx;
}
.du{
  left: 150rpx;
  opacity: 0;
}
.chang{
  right:190rpx;
  opacity: 0;
}
.yeziBox{
  position: absolute;
  bottom: 420rpx;
  width: 100%;
  height: 60rpx;
  display: flex;  
  align-items:center;
  justify-content:center;

}
.yezi{
  width: 80rpx;
  opacity: 0;
}
.time{
  position: absolute;
  bottom: 330rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  width: 100%;
  letter-spacing:5rpx;
  opacity: 0;
}
