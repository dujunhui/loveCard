<view class="component_page">
  <scroll-view scroll-y style="height:100%">
    <view class="lineBox">
      <view class="topTitle">
        <view class="cir"></view> <text class="lineTime">2018年1月</text>
      </view>
      <view class="topText"><text>遇见美好时光</text></view>
      <scroll-view class="imgBox" scroll-x>
        <image
          class="img"
          wx:for="{{imgArr201801s}}"
          wx:for-index="idx"
          wx:key="unique"
          src="{{item}}"
          data-src="{{imgArr201801[idx]}}"
          bindtap="showPreview"
          mode="aspectFill" 
        ></image>
      </scroll-view>
      

      <view class="topTitle">
        <view class="cir"></view> <text class="lineTime">2018年4月</text>
      </view>
      <view class="topText"><text>欧乐堡 海底世界之行</text></view>
