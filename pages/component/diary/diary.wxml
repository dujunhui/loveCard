        <image 
          class="img"
          wx:for="{{imgArr201804s}}"
          wx:for-index="idx"
          wx:key="unique"
          src="{{item}}" 
          data-src="{{imgArr201804[idx]}}"
          bindtap="showPreview2"
          mode="aspectFill"
        ></image>
      </scroll-view>


      <view class="topTitle">
        <view class="cir"></view> <text class="lineTime">2018年10月</text>
      </view>
      <view class="topText"><text>十一西安之旅</text></view>
      <scroll-view class="imgBox" scroll-x>
        <image 
          class="img"
          wx:for="{{imgArr201810s}}"
          wx:for-index="idx"
          wx:key="unique"
          src="{{item}}" 
          data-src="{{imgArr201810[idx]}}"
          bindtap="showPreview3"
          mode="aspectFill"
        ></image>
      </scroll-view>

      <view class="topTitle">
        <view class="cir"></view> <text class="lineTime">2018年10月</text>
      </view>
      <view class="topText"><text>我们结婚啦</text></view>
      <scroll-view class="imgBoxW" scroll-x>
        <image 
          class="imgW"
          wx:for="{{imgArr20181011s}}"
          wx:for-index="idx"
          wx:key="unique"
          src="{{item}}" 
          data-src="{{imgArr20181011[idx]}}"
          bindtap="showPreview4"
          mode="aspectFill"
        ></image>
      </scroll-view>

      <view class="topTitle">
        <view class="cir"></view> <text class="lineTime">2019年5月</text>
      </view>
      <view class="topText"><text>里口山之行</text></view>
